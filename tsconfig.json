{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "paths": {
    "@datasources/*": ["./src/datasources/*"],
    "@generated/*": ["./src/generated/*"],
    "@types/*": ["./src/types/*"]
  }
}
